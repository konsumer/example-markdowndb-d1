{
  "name": "example-markdowndb-d1",
  "description": "Demo app with sample routes",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "qwik check-client src dist && vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "npm run build && wrangler deploy",
    "fmt": "npx -y prettier --write .",
    "start": "vite --open --mode ssr",
    "index": "node tools/indexer.js"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.17.2",
    "@builder.io/qwik-city": "^1.17.2",
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/node": "^20.19.0",
    "ignore": "^7.0.5",
    "typescript": "5.4.5",
    "vite": "7.1.11",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "knex-cloudflare-d1": "^0.2.1",
    "mddb": "^0.9.5"
  }
}
